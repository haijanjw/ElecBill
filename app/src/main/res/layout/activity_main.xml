<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- ICON -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/logo"
            android:contentDescription="Electricity Meter" />

        <!-- TITLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Electricity Bill Estimator"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp" />

        <!-- MONTH SPINNER -->
        <Spinner
            android:id="@+id/spinnerMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <!-- UNITS INPUT -->
        <EditText
            android:id="@+id/editUnits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter electricity used (kWh)"
            android:inputType="number"
            android:layout_marginBottom="12dp" />

        <!-- REBATE INPUT -->
        <EditText
            android:id="@+id/editRebate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rebate percentage (0â€“5%)"
            android:inputType="number"
            android:layout_marginBottom="16dp" />

        <!-- CALCULATE BUTTON -->
        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CALCULATE and SAVE"
            android:backgroundTint="#1976D2"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

        <!-- RESULT -->
        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Charges: RM 0.00"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/txtFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Final Cost: RM 0.00"
            android:layout_marginBottom="16dp" />

        <!-- VIEW HISTORY -->
        <Button
            android:id="@+id/btnHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VIEW SAVED BILLS"
            android:backgroundTint="#1976D2"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp" />

        <!-- ABOUT -->
        <Button
            android:id="@+id/btnAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ABOUT DEVELOPER"
            android:backgroundTint="#1976D2"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
